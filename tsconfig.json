{
  "compilerOptions": {
    "target": "ES2020",      
    "module": "commonjs",
    "strict": true,       
    "rootDir": "./src",   
    "outDir": "./dist",      
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}